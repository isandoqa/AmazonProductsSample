<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingHorizontal="@dimen/_16sdp"
    android:paddingVertical="@dimen/_4sdp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/item_thumb_image"
        android:layout_width="@dimen/_85sdp"
        android:layout_height="@dimen/_85sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="centerCrop"
        tools:background="@drawable/ic_empty_image"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/item_name_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/item_thumb_image"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Test title "
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:textColor="@color/black"
        android:textSize="@dimen/_16ssp"
        android:textStyle="bold"
        android:maxLines="2"
        android:ellipsize="end"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/item_price_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/item_name_text"
        app:layout_constraintStart_toEndOf="@id/item_thumb_image"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Test price"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:textSize="@dimen/_14ssp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/item_date_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/item_price_text"
        app:layout_constraintStart_toEndOf="@id/item_thumb_image"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Test date"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:textSize="@dimen/_14ssp"/>

</androidx.constraintlayout.widget.ConstraintLayout>